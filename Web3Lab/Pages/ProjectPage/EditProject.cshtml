@page "{id:int}"
@model EditProjectModel
@{
    ViewData["Title"] = "Редактировать проект";
}

<h2>Редактировать проект</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" style="font-size: 24px; font-weight: bold;">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" style="font-size: 24px; font-weight: bold;">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post">
    <input type="hidden" asp-for="Project.Id" />

    <div>
        <label for="Name">Название проекта:</label>
        <input type="text" id="Name" asp-for="Project.Name" required />
    </div>
    <div>
        <label for="ClientCompany">Компания-заказчик:</label>
        <input type="text" id="ClientCompany" asp-for="Project.ClientCompany" required />
    </div>
    <div>
        <label for="ContractorCompany">Компания-исполнитель:</label>
        <input type="text" id="ContractorCompany" asp-for="Project.ContractorCompany" required />
    </div>
    <div>
        <label for="StartDate">Дата начала:</label>
        <input type="date" id="StartDate" asp-for="Project.StartDate" required />
    </div>
    <div>
        <label for="EndDate">Дата окончания:</label>
        <input type="date" id="EndDate" asp-for="Project.EndDate" required />
    </div>
    <div>
        <label for="Priority">Приоритет:</label>
        <input type="number" id="Priority" asp-for="Project.Priority" required />
    </div>
    <div>
        <label for="ProjectManager">Руководитель проекта:</label>
        <input type="text" id="ProjectManager" asp-for="Project.ProjectManager" required />
    </div>
    <button type="submit">Сохранить изменения</button>
</form>
