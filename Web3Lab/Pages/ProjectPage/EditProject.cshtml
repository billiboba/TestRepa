@page "{id:int}"
@model EditProjectModel
@{
    ViewData["Title"] = "Редактировать проект";
}

<h2 class="mb-4">Редактировать проект</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post">
    <input type="hidden" asp-for="Project.Id" />

    <div class="form-group">
        <label asp-for="Project.Name">Название проекта:</label>
        <input type="text" class="form-control" asp-for="Project.Name" required />
    </div>
    <div class="form-group">
        <label asp-for="Project.ClientCompany">Компания-заказчик:</label>
        <input type="text" class="form-control" asp-for="Project.ClientCompany" required />
    </div>
    <div class="form-group">
        <label asp-for="Project.ContractorCompany">Компания-исполнитель:</label>
        <input type="text" class="form-control" asp-for="Project.ContractorCompany" required />
    </div>
    <div class="form-group">
        <label asp-for="Project.StartDate">Дата начала:</label>
        <input type="date" class="form-control" asp-for="Project.StartDate" required />
    </div>
    <div class="form-group">
        <label asp-for="Project.EndDate">Дата окончания:</label>
        <input type="date" class="form-control" asp-for="Project.EndDate" required />
    </div>
    <div class="form-group">
        <label asp-for="Project.Priority">Приоритет:</label>
        <input type="number" class="form-control" asp-for="Project.Priority" required />
    </div>
    <div class="form-group">
        <label asp-for="Project.ProjectManager">Руководитель проекта:</label>
        <input type="text" class="form-control" asp-for="Project.ProjectManager" required />
    </div>

    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
</form>
