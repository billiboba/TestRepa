@page
@model AddProjectModel
@{
    ViewData["Title"] = "Добавить проект";
}

<h2 class="mb-4">Добавить проект</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name">Название проекта:</label>
        <input type="text" class="form-control" asp-for="Name" required />
    </div>

    <div class="form-group">
        <label asp-for="ClientCompany">Компания-заказчик:</label>
        <input type="text" class="form-control" asp-for="ClientCompany" required />
    </div>

    <div class="form-group">
        <label asp-for="ContractorCompany">Компания-исполнитель:</label>
        <input type="text" class="form-control" asp-for="ContractorCompany" required />
    </div>

    <div class="form-group">
        <label asp-for="StartDate">Дата начала:</label>
        <input type="date" class="form-control" asp-for="StartDate" required />
    </div>

    <div class="form-group">
        <label asp-for="EndDate">Дата окончания:</label>
        <input type="date" class="form-control" asp-for="EndDate" required />
    </div>

    <div class="form-group">
        <label asp-for="Priority">Приоритет:</label>
        <input type="number" class="form-control" asp-for="Priority" required />
    </div>

    <div class="form-group">
        <label asp-for="ProjectManager">Руководитель проекта:</label>
        <input type="text" class="form-control" asp-for="ProjectManager" required />
    </div>

    <button type="submit" class="btn btn-primary">Добавить проект</button>
</form>
