@page "{id:int}"
@model EditEmployeeModel
@{
    ViewData["Title"] = "Редактировать сотрудника";
}

<div class="container mt-4">
    <h2 class="mb-4">Редактировать сотрудника</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <form method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Employee.Id" />

        <div class="form-group">
            <label asp-for="Employee.FirstName">Имя:</label>
            <input type="text" class="form-control" asp-for="Employee.FirstName" required />
            <div class="invalid-feedback">
                Пожалуйста, введите имя.
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Employee.LastName">Фамилия:</label>
            <input type="text" class="form-control" asp-for="Employee.LastName" required />
            <div class="invalid-feedback">
                Пожалуйста, введите фамилию.
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Employee.MiddleName">Отчество:</label>
            <input type="text" class="form-control" asp-for="Employee.MiddleName" required />
            <div class="invalid-feedback">
                Пожалуйста, введите отчество.
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Employee.Email">Почта:</label>
            <input type="email" class="form-control" asp-for="Employee.Email" required />
            <div class="invalid-feedback">
                Пожалуйста, введите корректный email.
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Сохранить изменения</button>
    </form>
</div>
