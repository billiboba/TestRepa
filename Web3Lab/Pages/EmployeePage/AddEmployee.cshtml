@page
@model AddEmployeeModel
@{
    ViewData["Title"] = "Добавить сотрудника";
}

<div class="container mt-4">
    <h2 class="mb-4">Добавить сотрудника</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <form method="post" class="needs-validation" novalidate>
        <div class="form-group">
            <label asp-for="FirstName">Имя:</label>
            <input type="text" class="form-control" id="FirstName" name="FirstName" required />
            <div class="invalid-feedback">
                Пожалуйста, введите имя.
            </div>
        </div>

        <div class="form-group">
            <label asp-for="LastName">Фамилия:</label>
            <input type="text" class="form-control" id="LastName" name="LastName" required />
            <div class="invalid-feedback">
                Пожалуйста, введите фамилию.
            </div>
        </div>

        <div class="form-group">
            <label asp-for="MiddleName">Отчество:</label>
            <input type="text" class="form-control" id="MiddleName" name="MiddleName" required />
            <div class="invalid-feedback">
                Пожалуйста, введите отчество.
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Email">Почта:</label>
            <input type="email" class="form-control" id="Email" name="Email" required />
            <div class="invalid-feedback">
                Пожалуйста, введите корректный email.
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Добавить сотрудника</button>
    </form>
</div>
