@page
@model Web3Lab.Pages.EmployeesModel
@{
    ViewData["Title"] = "Управление сотрудниками";
}

<h2>Управление сотрудниками</h2>

@if (TempData["SuccessMessage"] != null)
{
        <div class="alert alert-success">
        @TempData["SuccessMessage"]
        </div>
}

<form method="post" asp-page-handler="AddEmployee">
    <h3>Добавить сотрудника</h3>
    <div>
        <label for="firstName">Имя</label>
        <input type="text" id="firstName" name="NewEmployee.FirstName" required />
    </div>
    <div>
        <label for="lastName">Фамилия</label>
        <input type="text" id="lastName" name="NewEmployee.LastName" required />
    </div>
    <div>
        <label for="middleName">Отчество</label>
        <input type="text" id="middleName" name="NewEmployee.MiddleName" required />
    </div>
    <div>
        <label for="email">Email</label>
        <input type="email" id="email" name="NewEmployee.Email" required />
    </div>
    <button type="submit">Добавить сотрудника</button>
</form>

<h3>Список сотрудников</h3>

@if (Model.Employees.Any())
{
        <table>
            <thead>
                <tr>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Отчество</th>
                    <th>Email</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var employee in Model.Employees)
            {
                    <tr>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.MiddleName</td>
                        <td>@employee.Email</td>
                        <td>
                            <form method="post" asp-page-handler="EditEmployee" asp-route-id="@employee.Id">
                                <button type="submit">Редактировать</button>
                            </form>

                            <form method="post" asp-page-handler="DeleteEmployee" asp-route-id="@employee.Id">
                                <button type="submit">Удалить</button>
                            </form>
                        </td>
                    </tr>
            }
            </tbody>
        </table>
}
else
{
        <p>Сотрудников нет.</p>
}

<h3>Сортировка сотрудников</h3>
<form method="post" asp-page-handler="SortEmployees">
    <label for="SortOption">Выберите способ сортировки:</label>
    <select id="SortOption" name="SortOption">
        <option value="LastName">По фамилии</option>
        <option value="FirstName">По имени</option>
        <option value="Email">По Email</option>
    </select>
    <button type="submit">Отсортировать</button>
</form>
